{
    "manifest_version": 2,
    "version": "1.0.0",
    "name": "Jira Issue Copy",
    "permissions": ["activeTab"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "Jira Issue Copy",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "description": "Jira issue number and title to clipboard",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "author": "syuchan1005<syuchan.dev@gmail.com>"
}
